@using Niteco.Web.Extensions
@model ServicePage

<div class="services-item-preview col-xs-12 col-sm-6 col-lg-3 checking-animate inactive fade-in" data-id="@Model.TeaserOrder">
    <div class="service-item__container">
        <div class="service-item__image">
            @if (Model.MainImage != null)
            {
                <picture @Html.EditAttributes(m => m.MainImage)>
                    <source media="(min-width: 75rem)" srcset="@Url.ContentUrl(Model.MainImage)?preset=1900">
                    <source media="(min-width: 62rem)" srcset="@Url.ContentUrl(Model.MainImage)?preset=1300">
                    <source media="(min-width: 48rem)" srcset="@Url.ContentUrl(Model.MainImage)?preset=1000">
                    <img src="@Url.ContentUrl(Model.MainImage)?preset=800" alt="@Model.Heading.GetShortContent(23)" />
                </picture>
            }
        </div>

        <div class="service-item__text">
            <div class="service-item__title">@Model.Heading.GetShortContent(23)</div>
            <div class="service-item__description">@Html.Raw(Model.ShortDescription)</div>
        </div>
    </div>
</div>
