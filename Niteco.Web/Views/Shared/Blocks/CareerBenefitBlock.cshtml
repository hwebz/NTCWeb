@model CareerBenefitBlock
<div class="careers-benefit">
    <div class="benefit-thumbnail">
        <picture @Html.EditAttributes(m => m.MainImage)>
            <source media="(min-width: 75rem)" srcset="@Url.ContentUrl(Model.MainImage)?preset=1900">
            <source media="(min-width: 62rem)" srcset="@Url.ContentUrl(Model.MainImage)?preset=1300">
            <source media="(min-width: 48rem)" srcset="@Url.ContentUrl(Model.MainImage)?preset=1000">
            <img  src="@Url.ContentUrl(Model.MainImage)?preset=800" alt="@Model.Title" />
        </picture>
    </div>
    <div class="benefit-content">
        <h4 class="benefit-name">@Html.PropertyFor(x => x.Title)</h4>
        @Html.PropertyFor(x => x.Description)
    </div>
</div>