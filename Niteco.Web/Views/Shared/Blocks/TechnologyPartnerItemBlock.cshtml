@using EPiServer.Editor
@using EPiServer.Web.Routing
@model Niteco.ContentTypes.Blocks.TechnologyPartnerItemBlock
@{
    var animateClass = "";
}
@if (!PageEditing.PageIsInEditMode)
{
    animateClass = "checking-animate inactive slide-in-from-bottom";
}

<div class="col-xs-12 col-sm-6 col-lg-3 partner-item__column @animateClass">
    <a class="partner-item__logo" href="@Url.ContentUrl(Model.LinkContent)" title="@Model.Title" target="_blank">
        <picture @Html.EditAttributes(m => m.ImageUrl)>
            <img src="@Url.ContentUrl(Model.ImageUrl)?preset=800" alt="Partner Item Logo" />
        </picture>
    </a>
</div>
    